<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>gruvbox-material-light</id>
    <version>1.1.3</version>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Gruvbox Material Light Theme</name>
    <category>UI</category>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="ebyrdeu.khnykin@gmail.com" url="https://github.com/Ebyrdeu">
        Maxim Khnykin
    </vendor>

    <idea-version since-build="232"/>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
	Light Theme - inspired by the <a href="https://github.com/sainnhe/gruvbox-material?tab=readme-ov-file">gruvbox-material</a>
	<br>
	<br>
	Supported Languages: Java, Rust, Go, Python, C/C++, JS/TS
  ]]></description>

    <!-- Short summary of new features and bugfixes in the latest plugin version.
         Displayed on the Plugin Page and IDE Plugin Manager. Simple HTML elements can be included between <![CDATA[  ]]> tags. -->
    <change-notes><![CDATA[

<b>1.1.3</b>
<ul>
	<li>fixed database plugin colors notification</li>
</ul>
<b>1.1.2</b>
<ul>
	<li>adjusted colors for notification</li>
	<li>adjusted colors for slider</li>
	<li>fixed Git Log tree color on hover</li>
	<li>adjusted Active selected row to not overlap with unchecked checkbox</li>
</ul>
<b>1.1.1</b>
<ul>
	<li>Adjusted colors for round checkbox</li>
</ul>
  ]]></change-notes>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <themeProvider id="gruvbox-light-hard-theme"
                       path="/theme/gruvbox-material-light-hard.theme.json"
        />

        <themeProvider id="gruvbox-light-medium-theme"
                       path="/theme/gruvbox-material-light-medium.theme.json"
        />

        <themeProvider id="gruvbox-light-soft-theme"
                       path="/theme/gruvbox-material-light-soft.theme.json"
        />
    </extensions>
</idea-plugin>