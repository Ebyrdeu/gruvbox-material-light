<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
	<!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
	<id>gruvbox-material-light</id>
	<version>2.0.0</version>

	<!-- Public plugin name should be written in Title Case.
			 Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
	<name>Gruvbox Material Light Theme</name>
	<category>UI</category>

	<!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
	<vendor email="ebyrdeu.khnykin@gmail.com" url="https://github.com/Ebyrdeu">
		Maxim Khnykin
	</vendor>

	<idea-version since-build="232"/>

	<!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
			 Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
			 Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
	<description><![CDATA[
	Light Theme - inspired by the <a href="https://github.com/sainnhe/gruvbox-material?tab=readme-ov-file">gruvbox-material</a>
	<br>
	<br>
	Supported Languages: Java, Rust, Go, Python, C/C++, JS/TS
  ]]></description>

	<!-- Short summary of new features and bugfixes in the latest plugin version.
			 Displayed on the Plugin Page and IDE Plugin Manager. Simple HTML elements can be included between <![CDATA[  ]]> tags. -->
	<change-notes><![CDATA[

<b>2.0.0</b>
<ul>
	<li>added Islands Theme support</li>
</ul>
  ]]></change-notes>

	<!-- Product and plugin compatibility requirements.
			 Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
	<depends>com.intellij.modules.platform</depends>

	<extensions defaultExtensionNs="com.intellij">
		<themeProvider id="gruvbox-light-hard-theme"
		               path="/theme/gruvbox-material-light-hard.theme.json"
		/>

		<themeProvider id="gruvbox-light-medium-theme"
		               path="/theme/gruvbox-material-light-medium.theme.json"
		/>

		<themeProvider id="gruvbox-light-soft-theme"
		               path="/theme/gruvbox-material-light-soft.theme.json"
		/>

		<themeProvider id="islands-gruvbox-light-hard-theme"
		               path="/theme/islands-gruvbox-material-light-hard.theme.json"
		/>

		<themeProvider id="islands-gruvbox-light-medium-theme"
		               path="/theme/islands-gruvbox-material-light-medium.theme.json"
		/>

		<themeProvider id="islands-gruvbox-light-soft-theme"
		               path="/theme/islands-gruvbox-material-light-soft.theme.json"
		/>
	</extensions>
</idea-plugin>